{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "event": {
            "description": "The event to run when the conditions for this trigger are met",
            "$ref": "../constants/events.schema.json"
        },
        "target": {
            "description": "The target of the event",
            "default": "self",
            "$ref": "../constants/targets.schema.json"
        },
        "filters": {
            "description": "The list of conditions for this trigger",
            "$ref": "./filters.schema.json"
        }
    }
}